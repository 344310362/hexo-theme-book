<div class="columns">
  <div class="column col-10">
    <div class="book-post">
      <%-page.content%>
    </div>
    <% if(page.disqus != false) { %>
      <%- partial('_partials/comments') %>
    <% } %>
  </div>
  <div class="column col-2">
    <%- partial('_partials/toc') %>
  </div>
</div>

<% if(page.lightgallery != false) { %>
  <%- partial('_partials/lightgallery') %>
<% } %>

<script>
  // add figcaption under image
  document.querySelectorAll('img').forEach(function(img){
    if(img.getAttribute('alt')) {
      let parent = img.parentNode;
      let figcaption = document.createElement('figcaption');
      figcaption.innerHTML = img.getAttribute('alt');
      parent.appendChild(figcaption);
    }
  })
</script>